<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/detail_window_background"
    tools:context="com.mobanic.activities.DetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="?android:attr/progressBarStyleLarge"/>

                <com.mobanic.utils.RatioImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </FrameLayout>

            <TextView
                android:text="@string/specs_header"
                style="@style/HeaderTextView"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@android:color/white">

                <LinearLayout
                    style="@style/SpecsContainer">

                    <TextView
                        android:text="Make"
                        style="@style/SpecsKey"/>

                    <TextView
                        android:id="@+id/make"
                        style="@style/SpecsValue"
                        tools:text="Land Rover"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/SpecsContainer">

                    <TextView
                        android:text="Model"
                        style="@style/SpecsKey"/>

                    <TextView
                        android:id="@+id/model"
                        style="@style/SpecsValue"
                        tools:text="Range Rover Sport"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/SpecsContainer">

                    <TextView
                        android:text="Year"
                        style="@style/SpecsKey"/>

                    <TextView
                        android:id="@+id/year"
                        style="@style/SpecsValue"
                        tools:text="2014"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/SpecsContainer">

                    <TextView
                        android:text="Mileage"
                        style="@style/SpecsKey"/>

                    <TextView
                        android:id="@+id/mileage"
                        style="@style/SpecsValue"
                        tools:text="50"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/SpecsContainer">

                    <TextView
                        android:text="Previous Owners"
                        style="@style/SpecsKey"/>

                    <TextView
                        android:id="@+id/previousOwners"
                        style="@style/SpecsValue"
                        tools:text="1"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/SpecsContainer">

                    <TextView
                        android:text="Engine"
                        style="@style/SpecsKey"/>

                    <TextView
                        android:id="@+id/engine"
                        style="@style/SpecsValue"
                        tools:text="3000cc"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/SpecsContainer">

                    <TextView
                        android:text="Transmission"
                        style="@style/SpecsKey"/>

                    <TextView
                        android:id="@+id/transmission"
                        style="@style/SpecsValue"
                        tools:text="Automatic"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/SpecsContainer">

                    <TextView
                        android:text="Fuel Type"
                        style="@style/SpecsKey"/>

                    <TextView
                        android:id="@+id/fuelType"
                        style="@style/SpecsValue"
                        tools:text="Diesel"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/SpecsContainer">

                    <TextView
                        android:text="Color"
                        style="@style/SpecsKey"/>

                    <TextView
                        android:id="@+id/color"
                        style="@style/SpecsValue"
                        tools:text="Paris Grey"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/SpecsContainer">

                    <TextView
                        android:text="Location"
                        style="@style/SpecsKey"/>

                    <TextView
                        android:id="@+id/location"
                        style="@style/SpecsValue"
                        tools:text="UK"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/gallery_header"
                android:text="@string/gallery_header"
                style="@style/HeaderTextView"/>

            <ViewFlipper
                android:id="@+id/flipper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoStart="true"
                android:flipInterval="3000"
                android:foreground="?selectableItemBackground">

                <com.mobanic.utils.RatioImageView
                    android:id="@+id/gallery_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </ViewFlipper>

            <TextView
                android:id="@+id/features_header"
                android:text="@string/features_header"
                style="@style/HeaderTextView"/>

            <LinearLayout
                android:id="@+id/features_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@android:color/white"/>

        </LinearLayout>

    </ScrollView>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/button_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_contact"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="bottom|right"
        fab:fab_colorNormal="#ff4081"
        fab:fab_colorPressed="#ffd03568"/>

</FrameLayout>
